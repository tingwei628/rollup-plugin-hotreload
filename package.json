{
  "name": "rollup-plugin-hotreload",
  "version": "2.2.4",
  "description": "Hot Reload plugin for Rollup.js",
  "main": "build/index.min.js",
  "repository": "git@github.com:tingwei628/rollup-plugin-hotreload.git",
  "author": "tingwei628 <sbvq6p199xe@gmail.com>",
  "license": "MIT",
  "scripts": {
    "test": "rm -rf coverage/ && node_modules/jest/bin/jest.js --coverage",
    "clean-build": "rm -rf build/",
    "coverage": "cat coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "build": "npm run clean-build && cross-env NODE_ENV=production node_modules/.bin/rollup -c rollup.config.js",
    "testsample": "node_modules/jest/bin/jest.js -- ./__test__/sample.test.js"
  },
  "dependencies": {
    "cross-env": "^5.2.0"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-jest": "^23.6.0",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-env": "^1.7.0",
    "coveralls": "^3.0.0",
    "jest": "^21.2.1",
    "jest-cli": "^23.6.0",
    "regenerator-runtime": "^0.13.1",
    "rollup": "^0.52.3",
    "rollup-plugin-babel": "^3.0.7",
    "rollup-plugin-commonjs": "^8.4.1",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-replace": "^2.1.0",
    "rollup-plugin-uglify": "^4.0.0"
  },
  "jest": {
    "testMatch": [
      "**/__test__/*.test.js"
    ]
  }
}