{
  "name": "rollup-plugin-hotreload",
  "version": "1.0.0",
  "description": "Hot Reload plugin for Rollup.js",
  "main": "build/index.min.js",
  "repository": "git@github.com:tingwei628/rollup-plugin-hotreload.git",
  "author": "tingwei628 <sbvq6p199xe@gmail.com>",
  "license": "MIT",
  "scripts": {
    "test": "rm -rf coverage/ && node_modules/jest/bin/jest.js --coverage",
    "clean-build": "rm -rf build/",
    "build": "yarn run clean-build && NODE_ENV=production node_modules/.bin/rollup -c rollup.config.js"
  },
  "dependencies": {
    "socket.io": "^2.0.4"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-env": "^1.6.1",
    "jest": "^21.2.1",
    "rollup": "^0.52.0",
    "rollup-plugin-babel": "^3.0.2",
    "rollup-plugin-commonjs": "^8.2.6",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-replace": "^2.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js"
    ],
    "testMatch": [
      "test/*.js"
    ]
  }
}
